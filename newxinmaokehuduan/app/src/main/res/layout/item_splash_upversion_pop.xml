<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#55555555"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/layout_dialog"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@mipmap/updatebackground"
        android:orientation="vertical">
        <!--android:background="#00000000"
            android:layout_marginTop="@dimen/dp_50"
             android:paddingBottom="@dimen/dp_30"
               android:layout_height="@dimen/dp_110"
        -->
        <View
            android:id="@+id/view_touming"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_110"
            android:background="#00000000"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/tv_upversion_dialog_clean"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@mipmap/update_closebtn"
            android:visibility="visible" />

        <TextView
            android:id="@+id/text_findversion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_15"
            android:text="发现新版本"
            android:textColor="#c9a063"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_findversion"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="10px"
            android:text="1.7"
            android:textColor="#c9a063"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/tv_upversion_dialog_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_40"

            android:layout_marginTop="@dimen/dp_15"
            android:lineSpacingMultiplier="1.5"

            android:text="1."
            android:textColor="#666666"
            android:textSize="@dimen/sp_14" />
        <!--  android:padding="5dp"-->
        <TextView
            android:id="@+id/tv_upversion_dialog_up"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_10"
            android:background="#c9a063"
            android:gravity="center"
            android:text="立即更新"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:visibility="visible" />


    </LinearLayout>


</RelativeLayout>




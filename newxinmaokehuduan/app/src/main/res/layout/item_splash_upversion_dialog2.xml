<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:fitsSystemWindows="true"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:layout_width="260dp"
            android:layout_height="164dp"
            android:layout_gravity="center"
            android:background="@mipmap/top" />

        <LinearLayout
            android:background="@color/white"
            android:id="@+id/layout_dialog"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:id="@+id/view_touming"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_175"
                android:background="#00000000"
                android:visibility="gone" />

            <View
                android:id="@+id/view_2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="#00000000"
                android:visibility="gone" />

            <View
                android:id="@+id/view_3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="#00000000"
                android:visibility="gone" />

            <View
                android:id="@+id/view_4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="#00000000"
                android:visibility="gone" />

            <View
                android:id="@+id/view_5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="#00000000"
                android:visibility="gone" />

            <View
                android:id="@+id/view_6"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="#00000000"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/tv_upversion_dialog_clean"
                android:layout_width="@dimen/dp_28"
                android:layout_height="@dimen/dp_28"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_5"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:paddingTop="@dimen/dp_5"
                android:src="@mipmap/update_closebtn"
                android:visibility="visible" />

            <TextView
                android:id="@+id/text_findversion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_15"
                android:text="发现新版本"
                android:textColor="#c9a063"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tv_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_findversion"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="10px"
                android:text="1.7"
                android:textColor="#c9a063"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/tv_upversion_dialog_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_15"
                android:lineSpacingMultiplier="1.5"
                android:text="1."
                android:textColor="#666666"
                android:textSize="@dimen/sp_14" />
            <!--  android:padding="5dp"-->
            <TextView
                android:id="@+id/tv_upversion_dialog_up"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_10"
                android:background="#c9a063"
                android:gravity="center"
                android:text="立即更新"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14"
                android:visibility="visible" />


        </LinearLayout>

        <ImageView
            android:layout_width="260dp"
            android:layout_height="15dp"
            android:background="@mipmap/bottom" />
    </LinearLayout>


</LinearLayout>




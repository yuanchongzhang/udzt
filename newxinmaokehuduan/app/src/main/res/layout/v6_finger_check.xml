<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_yijuhua"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/gesture_tip_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dip"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="@dimen/dp_25"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"

                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_ri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="14"

                        android:textColor="#4C4C4C"
                        android:textSize="38sp" />

                    <View
                        android:layout_width="1.5dp"
                        android:layout_height="@dimen/dp_15"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="#4C4C4C" />

                    <TextView

                        android:id="@+id/text_yue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"


                        android:text="july"

                        android:textColor="#4C4C4C"
                        android:textSize="24sp"

                        />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"


                        android:text="月"

                        android:textColor="#4C4C4C"
                        android:textSize="20sp"

                        />


                </LinearLayout>


            </LinearLayout>

            <!--     com.zprmb.udzt.view.RoundImageView-->
            <com.xmrxcaifu.roundcircle.RoundImageView
                android:id="@+id/user_logo"
                android:layout_width="200px"
                android:layout_height="200px"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50px"
                android:src="@drawable/img_boy" />

            <ImageView
                android:id="@+id/user_existlogo"
                android:layout_width="180px"
                android:layout_height="180px"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:src="@drawable/img_boy"
                android:visibility="gone" />

            <TextView
                android:id="@+id/text_welcome"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:gravity="center_horizontal"
                android:text="欢迎您"
                android:textColor="#252525"
                android:textSize="46px" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_showdialog"
            android:layout_width="220px"
            android:layout_height="170px"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_160"
            android:src="@mipmap/zhiwen" />

        <TextView
            android:id="@+id/text_tip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="点击进行指纹验证"
            android:textColor="#56606C"
            android:textSize="34px" />
    </LinearLayout>

    <!--#9B9B9B  #2083E8-->
    <TextView
        android:id="@+id/text_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="center"
        android:layout_marginBottom="115px"
        android:text="账号密码登录"
        android:textColor="#9B9B9B"
        android:textSize="46px" />
</LinearLayout>


